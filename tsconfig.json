{
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "resolveJsonModule": true,

    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],

    "outDir": "dist",
    "removeComments": true,
    "rootDir": ".",
    "sourceMap": true,
    "strict": false,

    "skipLibCheck": true,               // <-- key line
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],

    "paths": {
      "@daos/*": ["src/daos/*"],
      "@entities/*": ["src/entities/*"],
      "@shared/*": ["src/shared/*"],
      "@server": ["src/Server"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.bin", "spec/**/*.ts"],
  "exclude": ["src/public/"]
}
